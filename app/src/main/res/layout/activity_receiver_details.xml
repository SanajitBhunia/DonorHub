<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.auth.ReceiverDetails"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <TextView
            android:id="@+id/reciverName"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/receivername"
            android:text="Name"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/lightRed"
            android:textSize="35sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/receiverHospitalName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Hospital Name"
            android:layout_marginStart="50dp"
            android:textSize="30sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Hospital"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:drawableLeft="@drawable/baseline_factory_24"
                android:textStyle="bold"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverHospital"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital Address"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>
            <TextView
                android:id="@+id/receiverDistrict"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hospital District"
                android:textSize="22sp"
                android:layout_marginStart="50dp"/>



        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Reason"
                android:drawableLeft="@drawable/baseline_emergency_24"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverReason"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="reason"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Contact"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/baseline_contact_emergency"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="contact"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Blood Group"
                android:drawableLeft="@drawable/baseline_bloodtype_24"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverBloodGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blood Group"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:text="No of Units"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/baseline_ad_units_24"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textColor="@color/lightRed"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                android:id="@+id/receiverBloodUnits"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="unit"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>
                <TextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Units"
                    android:textSize="20sp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Age"
                android:textSize="30sp"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/baseline_calendar_month"
                android:textStyle="bold"
                android:textAlignment="center"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverAge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Age"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Gender"
                android:paddingTop="5dp"
                android:drawableLeft="@drawable/baseline_diversity_1_24"
                android:textColor="@color/lightRed"
                android:textSize="30sp"
                android:textStyle="bold"
                android:textAlignment="center"/>
            <TextView
                android:id="@+id/receiverGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Gender"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>




        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="200dp"
                android:layout_height="60dp"
                android:text="Comments"
                android:paddingTop="5dp"
                android:textAlignment="center"
                android:drawableLeft="@drawable/baseline_edit_note_24"
                android:textSize="30sp"

                android:textStyle="bold"
                android:textColor="@color/lightRed"/>
            <TextView
                android:id="@+id/receiverComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Comments"
                android:textSize="20sp"
                android:layout_marginStart="50dp"/>

            <Button
                android:id="@+id/btnCall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interested"
                android:textSize="20sp"
                android:backgroundTint="@color/green"
                android:layout_gravity="center"/>




        </LinearLayout>

    </LinearLayout>


</ScrollView>